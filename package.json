{
  "name": "display-things",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "electron": "8.0.3",
    "electron-builder": "^22.4.0",
    "foreman": "^3.0.1",
    "react-scripts": "3.4.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.6.0",
    "@material-ui/icons": "^4.5.1",
    "node-dir": "^0.1.17",
    "node-sass": "^4.13.1",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-beautiful-dnd": "11.0.5",
    "walk": "^2.3.14"
  },
  "build": {
    "appId": "display-things",
    "mac": {
      "category": "display-things.app.category.type"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories":{
      "buildResources": "assets"
    }
  },
  "homepage": "./",
  "main": "src/electron.js",
  "scripts": {
    "start": "export BROWSER=none && nf start -p 3000",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/electron-wait-react",
    "react-start": "react-scripts start",
    "dist": "electron-builder",
    "predist": "yarn build && cp src/electron.js build/electron.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
