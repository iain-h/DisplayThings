{
  "name": "display-things",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "electron": "15.5.5",
    "electron-builder": "^22.4.0",
    "foreman": "^3.0.1",
    "react-scripts": "3.4.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.10",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.49",
    "async": "^3.2.2",
    "electron-notarize": "^1.0.0",
    "express": "^4.17.1",
    "flexsearch": "^0.6.32",
    "mousetrap": "^1.6.5",
    "node-dir": "^0.1.17",
    "node-sass": "^4.13.1",
    "react": "^16.1.1",
    "react-beautiful-dnd": "11.0.5",
    "react-color": "^2.18.0",
    "react-dom": "^16.1.1",
    "react-hotkeys": "^2.0.0",
    "react-pdf": "^4.1.0",
    "textarea-caret": "^3.1.0",
    "walk": "^2.3.14"
  },
  "build": {
    "appId": "com.saffron.displaythings",
    "productName": "DisplayThings",
    "mac": {
      "category": "display-things.app.category.type",
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.inherit.plist"
    },
    "afterSign": "./afterSignHook.js",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "homepage": "./",
  "main": "src/electron.js",
  "scripts": {
    "start": "nf start -p 8000",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/electron-wait-react",
    "react-start": "react-scripts start",
    "dist": "electron-builder",
    "predist": "yarn build && cp 'src/electron.js' 'build/electron.js' && sed -i.bak 's/public/build/' build/electron.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
